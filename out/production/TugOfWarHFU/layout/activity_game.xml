<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/AbsoluteLayoutGame"
   
    tools:context=".GameActivity" >

    <ImageView
        android:id="@+id/Hintergrund"
        android:layout_width="wrap_content"
        android:layout_height="604dp"
        android:layout_x="0dp"
        android:layout_y="-100dp"
        android:src="@drawable/hintergrund_final" />
	
	<TextView
        android:id="@+id/LebenRot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="12dp"
        android:layout_y="63dp"
        android:text="@string/empty"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/LebenBlau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="540dp"
        android:layout_y="63dp"
        android:text="@string/empty"
        android:textColor="@color/blue" />
    
    <ImageButton
        android:id="@+id/imageButtonSoldat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="13dp"
        android:layout_x="10dp"
        android:layout_y="307dp"
        android:onClick="SpawnSoldat"
        android:src="@drawable/ic_soldat" />

    <ImageButton
        android:id="@+id/imageButtonKrieger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_x="88dp"
        android:layout_y="309dp"
        android:onClick="SpawnKrieger"
        android:src="@drawable/ic_krieger" />

    <TextView
        android:id="@+id/gold_anzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="476dp"
        android:layout_y="337dp"
        android:text="Gold"
        android:textColor="@color/Gold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/imagePauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_x="388dp"
        android:layout_y="316dp"
        android:onClick="gamePause"
        android:src="@android:drawable/ic_media_pause" />

    <TextView
        android:id="@+id/messages"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_x="193dp"
        android:layout_y="328dp"
        android:background="@color/black"
        android:text="@string/empty"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="invisible" />
    
    </RelativeLayout>

